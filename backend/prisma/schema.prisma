generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        Int      @id @default(autoincrement())
  nome      String
  email     String   @unique
  senha     String
  criadoEm  DateTime @default(now())
  livros    Livro[]
}

model Livro {
  id        Int      @id @default(autoincrement())
  titulo    String
  autor     String
  ano       Int?
  criadoEm  DateTime @default(now())
  usuario   Usuario  @relation(fields: [usuarioId], references: [id])
  usuarioId Int
}
