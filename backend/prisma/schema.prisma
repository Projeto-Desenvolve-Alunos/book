generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        Int      @id @default(autoincrement())
  nome      String
  email     String   @unique
  senha     String
  criadoEm  DateTime @default(now()) @map("criadoem")
  livros    Livro[]
}


enum StatusLeitura {
  QUERO_LER
  LENDO
  LIDO
  PAUSADO
  ABANDONADO
}

model Livro {
  id          String         @id @default(uuid())
  title       String         @map("titulo")
  author      String         @map("autor")
  
  genre       String?
  year        Int?
  pages       Int?
  rating      Int?
  synopsis    String?
  cover       String?
  
  status      StatusLeitura?
  currentPage Int?
  notes       String?
  
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  usuario     Usuario        @relation(fields: [usuarioId], references: [id])
  usuarioId   Int
  
  @@map("livros")
}
